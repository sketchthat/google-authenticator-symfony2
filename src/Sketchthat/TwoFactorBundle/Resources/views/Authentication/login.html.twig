{% extends '::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h5>Sign In</h5>
        {% if error.getMessageKey is defined %}
            {{ error.getMessageKey }}
        {% endif %}

        <form action="{{ path('login_check') }}" method="post">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Username" name="_username" id="username" value="{{ last_username }}">
                </div>
                <div class="col-md-4">
                    <input type="password" class="form-control" placeholder="Password" name="_password" id="password">
                </div>
                <div class="col-md-4">
                    <input type="submit" name="login" value="Sign in" class="btn btn-large btn-primary">
                </div>
            </div>
        </form>

    </div>
</div>

<div class="text-right">
    <a href="{{ path('register') }}">Register Now</a>
</div>
{% endblock %}